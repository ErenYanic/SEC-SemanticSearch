# SEC EDGAR API Credentials (Required)
EDGAR_IDENTITY_NAME="Your Name"
EDGAR_IDENTITY_EMAIL="your.email@example.com"

# Hugging Face Token (Optional)
# Speeds up model downloads and increases usage limits
HUGGING_FACE_TOKEN="your_huggingface_token_here"

# Embedding Model Configuration (Optional)
# Model name for sentence embeddings
EMBEDDING_MODEL_NAME="google/embeddinggemma-300m"
# Device: "cuda" for GPU, "cpu" for CPU, "auto" for automatic detection
EMBEDDING_DEVICE="auto"
# Batch size for embedding generation (default 32; reduce for low-VRAM GPUs)
EMBEDDING_BATCH_SIZE="32"

# Text Chunking Configuration (Optional)
# Maximum tokens per chunk
CHUNKING_TOKEN_LIMIT="500"
# Tolerance band for chunk boundaries (Â±tokens)
CHUNKING_TOLERANCE="50"

# Database Configuration (Optional)
# Path to ChromaDB storage
DB_CHROMA_PATH="./data/chroma_db"
# Path to SQLite metadata registry
DB_METADATA_DB_PATH="./data/metadata.sqlite"
# Maximum number of filings to store
DB_MAX_FILINGS="20"

# Search Configuration (Optional)
# Default number of results to return
SEARCH_TOP_K="5"
# Minimum similarity threshold (0.0 to 1.0)
SEARCH_MIN_SIMILARITY="0.0"
